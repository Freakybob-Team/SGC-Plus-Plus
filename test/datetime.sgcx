// Import datetime
import datetime

// the variables
var now = datetime.datetime.now()
var year = now.year
var month = now.month
var day = now.day
var hour = now.hour
var minute = now.minute

if (hour > 12) then
    var hour_12 = hour - 12
    var am_pm = "PM"
else
    var hour_12 = hour
    var am_pm = "AM"
end

var result = f"Current date and time: {month}/{day}/{year} {hour_12}:{minute} {am_pm}"
gPrintln(result)
