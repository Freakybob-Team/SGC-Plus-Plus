import time

// Declare variables for testing
var sum = 40 * 2  // 40 * 2
var message1 = "greg".upper()  // convert 'greg' to uppercase
var names = ["Sigma", "Squirrel", "Wish", "Names", "Hyper :3", "uhh peak"]


// demonstrate string manipulation in SGC++ (e.g., .upper(), .lower(), etc.)
// Note: You can't use methods like .upper() directly in gPrintln() f-strings (e.g., gPrintln(f"greg: {greg.upper()}"))
// this needs to be done separately or via a variable assignment.
gPrintln(message1)  // Should print: GREG

var sleep = time.sleep(2)
// Testing basic math and string operations with gPrintln()
gPrintln(1 + 2)  // Should print: 3 (basic addition)
gPrintln(f"The answer for the sum variable is: {sum}.")  // Should print: The answer for the sum variable is: 80.
gPrintln("SGC++ peak")  // Just prints like normal

// 
var sleep = time.sleep(2)
var message2 = message1.lower()  // uses message1 as it's own variable now
gPrintln(message2) // prints: greg
gPrintln("\n")

var sleep = time.sleep(2)

